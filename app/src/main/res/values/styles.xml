<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Splash screen theme to show Branding-->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!--Dialog place detail animation-->
    <style name="PlaceDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_bottom_up</item>
        <item name="android:windowExitAnimation">@anim/slide_top_down</item>
    </style>

</resources>
